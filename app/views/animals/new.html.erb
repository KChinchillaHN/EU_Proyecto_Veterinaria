<h1>Crear un nuevo Tipo de Animal</h1>
<p><em>Ingrese los siguientes datos: </em></p>

<%= render partial: "shared/errors", locals: { obj: @animal } %>

<%= form_for @animal do |f| %>
<%= render partial: "form", locals: {f: f} %>
	
<div class="btn-group" role="group" aria-label="Acciones">
	<%= button_tag(type: 'submit', class: "btn btn-default") do %>
			<i class="icon-ok icon-white"></i> Crear Animal
<% end %>

<%= link_to "Cancelar", animals_path, class: "btn btn-default" %>

<%- end %>