<h1>Crear nueva Mascota</h1>
<p><em>Ingrese los siguientes datos: </em></p>

<%= render partial: "shared/errors", locals: { obj: @pet } %>

<%= form_for @pet do |f| %>
<%= render partial: "form", locals: {f: f} %>
	<p>
<div class="btn-group" role="group" aria-label="Acciones">
		<%= button_tag(type: 'submit', class: "btn btn-default") do %>
			<i class="icon-ok icon-white"></i> Crear Mascota
		<% end %>
		<%= link_to "Cancelar", pets_path, class: "btn btn-default" %>
	</p>
<%- end %>