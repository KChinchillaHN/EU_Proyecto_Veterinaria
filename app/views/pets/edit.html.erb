<h1>Editar Mascotas</h1>
<p><em>Verificar los siguientes datos: </em></p>

<%= render partial: "shared/errors", locals: { obj: @pet } %>

<%= form_for @pet do |f| %>
	<%= render partial: "form", locals: {f: f} %>


	<div class="btn-group" role="group" aria-label="Acciones">
		<%= button_tag(type: 'submit', class: "btn btn-default") do %>
			<i class="icon-ok icon-white"></i> Actualizar
		<% end %>
		<%= link_to "Cancelar", @pet, class: "btn btn-default" %>

<%- end %>