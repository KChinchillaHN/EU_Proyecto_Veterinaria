<div class="form-group">
		<%=	f.label :name, "Nombre: " %>
		<%=	f.text_field :name , class: "form-control" %>
	</div>
<div class="form-group">
		<%=	f.label :born_at, "Fecha Nacimiento: " %>
		<%=	f.date_field :born_at, class: "form-control" %>
	</div>
<div class="form-group">
		<%=	f.label :observations, "Observaciones: " %>
		<%=	f.text_area :observations, class: "form-control" %>
	</div>
<div class="form-group">
	<%= f.label :animal_id, "Tipo de Animal" %>
	<%= f.select :animal_id, Animal.pluck(:name, :id), class: "form-control" %>
	</div>
<div class="form-group">
		<%=	f.label :pet_url, "Imagen: " %>
		<%=	f.url_field :pet_url, class: "form-control" %>
</div>