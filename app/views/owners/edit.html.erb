<h1>Editar Propiestario</h1>

<%= render partial: "shared/errors", locals: { obj: @owner } %>

<%= form_for @owner do |f| %>
	<%= render partial: "form", locals: {f: f} %>
	<div class="btn-group" role="group" aria-label="Acciones">
		<%= button_tag(type: 'submit', class: "btn btn-default") do %>
			<i class="icon-ok icon-white"></i> Actualizar
		<% end %>
		<%= link_to "Cancelar", @owner, class: "btn btn-default"%>
		<%= link_to "Borrar", @owner, method: :delete, data: {confirm: "Estas Seguro?"}, class: "btn btn-default"%>
<%- end %>
